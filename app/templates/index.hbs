<div class="preprints-page"> {{!INDEX}}

    {{!HEADER}}
    <div class="registries-header"> {{!HEADER}}
        <div class="container"> {{!CONTAINER}}
            <div class="row">{{!HEADER ROW}}
                {{!TITLE}}
                <div class="text-center m-t-lg col-xs-12">
                    <div class="registries-brand"></div>
                    <p class="lead">
                        <span>{{if theme.isProvider theme.provider.description (t "index.header.title.paragraph")}}</span>
                        {{#if theme.isProvider}}
                            <br>
                            <small>
                                <a href="https://osf.io/registries/" onbeforeclick={{action "click" "link" "Index - Powered By"}}>{{t "index.header.powered_by"}}</a>
                            </small>
                        {{/if}}
                    </p>
                </div>
                {{!SEARCH}}
                <div class="preprint-search col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 m-v-lg" >
                    {{search-registries search="search"}}

                    {{#if shareRegistriesTotal}}
                        <p class="p-l-md">
                            <span class="f-w-lg">{{t "index.header.search" count=(number-format shareRegistriesTotal)}}</span>
                            <span>{{t "index.header.as_of"}} {{moment-format currentDate "MMMM DD, YYYY"}}</span>
                        </p>
                    {{/if}}
                </div>
            </div> {{!END ROW}}
        </div> {{!END CONTAINER}}
    </div> {{!END HEADER}}

    {{!RECENT REGISTRATIONS}}
    <div class="preprint-advisory p-v-md">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h2>{{t "index.recent.title"}}   <span style='font-size: 16px'>{{link-to (t 'index.recent.more') 'discover'}}</span></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    {{#each recentRegistrations as |reg|}}
                        <div class="panel panel-default search-result">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <h4>
                                            <a href='{{reg.url}}' {{action 'click' 'link' 'Registries - Index - Result Title' hyperlink}}>{{reg.title}}</a>
                                        </h4>
                                    </div>
                                </div>
                                <div class='row'>
                                    <div class='col-xs-12'>
                                        <ul class="comma-list">
                                            {{#each reg.contributors as |contributor index|}}
                                                {{#if contributor.users.bibliographic}}
                                                    {{author-link contributor=contributor}}
                                                {{/if}}
                                            {{/each}}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    {{#unless theme.isProvider}}
        {{!SERVICES}}
        <div class="preprint-tool p-v-md">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <h2>{{t "index.services.top.heading"}}</h2>
                        <p class="m-b-lg">{{t "index.services.top.paragraph"}}</p>
                    </div>
                </div>
            </div>
            <div class="row p-v-md">{{!BRANDED ROW}}

                <div class="col-sm-4 text-center">
                    <a href='http://ridie.3ieimpact.org/'>
                        <div class="provider-logo provider-ridie"></div>
                    </a>
                </div>
                <div class="col-sm-4 text-center">
                    <a href='http://egap.org/content/registration'>
                        <div class="provider-logo provider-egap"></div>
                    </a>
                </div>
                <div class="col-sm-4 text-center">
                    <a href='https://cos.io/prereg/'>
                        <div class="provider-logo provider-prereg"></div>
                    </a>
                </div>
            </div>
            <div class="row p-v-md">
                <div class="col-md-12 text-center">
                    <p class="lead">
                        {{t "index.services.bottom.p1"}}
                        <div class="p-t-sm">
                            {{t "index.services.bottom.div.line1"}}
                            <a class="source_code_link" href="https://github.com/CenterForOpenScience/ember-osf-registries"
                                {{action "click" "link" "Preprints - Index - GitHub Repo" "https://github.com/CenterForOpenScience/ember-osf-registries"}}>
                                {{t "index.services.bottom.div.linkText1"}}
                            </a>
                            {{t "index.services.bottom.div.line2"}}
                            <a class="source_code_link" href="https://docs.google.com/spreadsheets/d/1SocElbBjc_Nhme4-SJv2_zytBd1ys8R5aZDb3POe94c/edit#gid=331732182"
                                {{action "click" "link" "Preprints - Index - Requirements and Roadmap" "https://docs.google.com/spreadsheets/d/1SocElbBjc_Nhme4-SJv2_zytBd1ys8R5aZDb3POe94c/edit#gid=331732182"}}>
                                {{t "index.services.bottom.div.linkText2"}}
                            </a>
                            {{t "index.services.bottom.div.line3"}}
                        </div>
                    </p>
                    <a href="mailto:contact@osf.io" class="btn btn-info btn-lg" onclick={{action "click" "link" "Preprints - Index - Contact"}}>{{t "index.services.bottom.contact"}}</a>
                </div>
            </div>
        </div>
    {{/unless}}

    {{!ADVISORY GROUP}}
    <div class="preprint-advisory p-v-md">
        <div class="container">
            <div class="row">
                {{#if theme.isProvider}}
                    {{safe-markup theme.provider.advisoryBoard}}
                {{else}}
                    <div class="col-xs-12">
                        <h2>{{t "index.advisory.heading"}}</h2>
                        <p class="m-b-lg">{{t "index.advisory.paragraph"}}</p>
                    </div>
                    <div class="col-xs-6">
                        <ul>
                            <li><b>Stuart Buck :</b> Laura and John Arnold Foundation</li>
                            <li><b>Chris Chambers :</b> Registered Reports, Cardiff University</li>
                            <li><b>Ben Goldacre :</b> University of Oxford</li>
                            <li><b>Susan Hyde :</b> EGAP, UC Berkeley</li>
                            <li><b>Brendan Nyhan :</b> Dartmouth College</li>
                        </ul>
                    </div>
                    <div class="col-xs-6">
                        <ul>
                            <li><b>Mario Picon :</b> RIDIE, 3ie</li>
                            <li><b>Jessaca Spybrook :</b> IES, Western Michigan University</li>
                            <li><b>James Turitto :</b> Poverty Action Lab</li>
                            <li><b>Coosje Veldkamp :</b> Tilburg University</li>
                            <li><b>Deborah Zarin :</b> clinicaltrials.gov</li>
                        </ul>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>

</div> {{!END INDEX}}
